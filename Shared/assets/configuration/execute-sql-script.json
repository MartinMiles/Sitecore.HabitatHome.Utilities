{
    "Parameters": {
        "SqlServer": {
            "Type": "string",
            "Description": "Name of SQL Server"
        },
        "SqlAdminUser": {
            "Type": "string",
            "DefaultValue": "sa",
            "Description": "SQL Admin user name"
        },
        "SqlAdminPassword": {
            "Type": "string",
            "Description": "SQL Admin user password"
        },
        "ScriptFile": {
            "Type": "string",
            "Description": "SQL Script to execute"
        },
        "SqlVariables": {
            "Type": "psobject",
            "Description": "Name of user to remove"
        }
    },
    "Tasks": {
        "ExecuteSqlScript": {
            "Type": "InvokeSqlcmd",
            "Params": {
                "UserName": "[parameter('SqlAdminUser')]",
                "Password": "[parameter('SqlAdminPassword')]",
                "InputFile": "[parameter('ScriptFile')]",
                "Variable": "[parameter('SqlVariables')]"
            }
        }
    },
    "Settings": {
        "AutoRegisterExtensions": true
    }
}