// ------------------------------------------------------------------------------ //
//         Sitecore Install Framework - Install Commerce Engine Connect package   //
//                                                                                //
//  Run this configuration to install Commerce Engine Connect package.            //
//                                                                                //
//  NOTE: Only single line comments are accepted in configurations.               //
// ------------------------------------------------------------------------------ //
{
  "Parameters": {
    "ModuleFullPath": {
      "Type": "string"
    },
    "SharedConfigurationFolder": {
      "Type": "string",
      "Description": "The base folder where shared configurations are stored"
    },
    "SiteName": {
      "Type": "string"
    },
    "SqlDbPrefix": {
      "Type": "string"
    },
    "SqlAdminUser": {
      "Type": "string"
    },
    "SqlAdminPassword": {
      "Type": "string"
    },
    "SqlServer": {
      "Type": "string"
    },
    "MergeTool": {
      "Type": "string",
      "Description": "The path to the Merge Tool."
    },
    "InputFile": {
      "Type": "string",
      "Description": "The path to input file to merge."
    },
    "WebConfig": {
      "Type": "string",
      "Description": "The path to the web config file."
    }
  },
  "Register":{
    "Tasks":{
      "InstallSitecoreModule": "Install-SitecoreConfiguration"
    }
  },
  "Modules": [  "MergeWebConfig"],
  "Tasks": {
    "CheckPaths": {
      "Type": "EnsurePath",
      "Params": {
        "Exists": [
          "[parameter('ModuleFullPath')]"
        ]
      }
    },
    "InstallCEConnectModule": {
      "Type": "InstallSitecoreModule",
      "Params": {
        "Path": "[concat(parameter('SharedConfigurationFolder'), '\\install-module.json')]",
        "Package": "[parameter('ModuleFullPath')]",
        "SiteName":"[parameter('SiteName')]",
        "DatabasePrefix":"[parameter('SqlDbPrefix')]",
        "SqlAdminUser":"[parameter('SqlAdminUser')]",
        "SqlAdminPassword":"[parameter('SqlAdminPassword')]",
        "SqlServer":"[parameter('SqlServer')]",
        "ModuleDatabase":"mastercore"
      }
    },
    "MergeWebConfig": {
      "Type": "MergeWebConfig",
      "Params": {
        "MergeTool": "[parameter('MergeTool')]",
        "InputFile": "[parameter('InputFile')]",
        "WebConfig": "[parameter('WebConfig')]"
      }
    }
  }
}
